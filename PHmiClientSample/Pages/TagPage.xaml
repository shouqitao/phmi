<UserControl
    x:Class="PHmiClientSample.Pages.TagPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:PHmiClientSample="clr-namespace:PHmiClientSample"
    xmlns:Controls="clr-namespace:PHmiClient.Controls;assembly=PHmiClient"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300"
    d:DataContext="{d:DesignInstance Type=PHmiClientSample:PHmi, IsDesignTimeCreatable=True}">
    <StackPanel>
        <CheckBox IsChecked="{Binding Path=IoDevice.M0.Value}"
                  Content="{Binding Path=IoDevice.M0.Description}" />
        <CheckBox IsChecked="{Binding Path=IoDevice.M1.Value}"
                  Content="{Binding Path=IoDevice.M1.Description}" />
        <CheckBox IsChecked="{Binding Path=IoDevice.M2.Value}"
                  Content="{Binding Path=IoDevice.M2.Description}" />
        <Controls:NumericInput NumericTag="{Binding Path=IoDevice.D0}" />
    </StackPanel>
</UserControl>